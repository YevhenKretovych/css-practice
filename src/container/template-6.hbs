<header class="header">
	<a href="#test">
		{{> logo}}
	</a>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header isVertical=false}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_description">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">
		<div class="form_inputs">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="{{id}}" class="input" />
			{{/each}}
		</div>

		<div class="form_checkbox">
			{{#with checkbox}}
			<input type="checkbox" name="{{name}}" class="checkbox" />
			<label class="checkbox_label">{{label}}</label>
			{{/with}}
		</div>

		<button type="sabmit" class="form_button">{{button}}</button>

		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

<div class="updates">
	{{#with updates}}
	<strong class="updates_title">{{title}}</strong>

	{{#each list}}
	<div class="updates_list">
		<div class="list_icon"></div>
		<div class="upd_list">
			<strong class="list_nickname">{{nickname}}</strong>
			<p class="list_description">{{description}}</p>
		</div>
	</div>
	{{/each}}

	{{#with show_all}}
	<a href="url" class="show_all">{{text}}</a>
	{{/with}}
	{{/with}}
</div>

<div class="expirience">
	{{#with expirience}}
	<h2 class="expirience_title">{{title}}</h2>

	<div class="expirience_badge">
		<span class="exp_badge">{{badge}}</span>
	</div>

	<div class="list">
		{{#each list}}
		<div class="list_card">
			<strong class="card_name">{{name}}</strong>
			<p class="list_details">{{details}}</p>
		</div>
		{{/each}}
	</div>
	{{/with}}
</div>

<footer class="footer" id="test">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>
	{{#each footer}}
	<div>
		<span clas="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>