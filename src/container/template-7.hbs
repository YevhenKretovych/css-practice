<main class="main">
	{{#with hero}}
	<h1 class="hero_title">{{title}}</h1>

	<p class="hero_description">{{description}}</p>

	{{#with button}}
	<a href="{{url}}" class="hero_button">{{text}}</a>
	{{/with}}
	{{/with}}
</main>

<div class="about">
	{{#with about}}
	<strong class="about_heading">{{heading}}</strong>

	<p class="about_info">{{info}}</p>
	{{/with}}
</div>

<div class="articles">
	<div class="articles_header">
		<h2 class="articles_title">Our Articles</h2>

		<button type="submit" class="articles_button">View All</button>
	</div>

	{{> articleCardDark}}
</div>